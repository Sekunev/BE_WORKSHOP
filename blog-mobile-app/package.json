{
  "name": "BlogMobileApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:ios": "cd ios && xcodebuild -workspace BlogMobileApp.xcworkspace -scheme BlogMobileApp -configuration Release -destination generic/platform=iOS -archivePath BlogMobileApp.xcarchive archive",
    "clean": "react-native clean-project-auto",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && xcodebuild clean -workspace BlogMobileApp.xcworkspace -scheme BlogMobileApp",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "polish:performance": "node scripts/performance-test.js",
    "polish:ui": "node scripts/ui-polish.js",
    "polish:stability": "node scripts/stability-check.js",
    "polish:all": "npm run polish:performance && npm run polish:ui && npm run polish:stability",
    "pre-submission": "npm run typecheck && npm run lint && npm run test:coverage && npm run polish:all"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/netinfo": "^11.2.1",
    "@react-native-community/push-notification-ios": "^1.11.0",
    "@react-native-firebase/app": "^23.4.1",
    "@react-native-firebase/crashlytics": "^23.4.1",
    "@react-native-firebase/messaging": "^23.4.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.5",
    "date-fns": "^4.1.0",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-elements": "^3.4.3",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-image-picker": "^7.1.0",
    "react-native-image-zoom-viewer": "^3.0.1",
    "react-native-keychain": "^8.2.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-markdown-display": "^7.0.2",
    "react-native-mmkv": "^2.11.0",
    "react-native-pell-rich-editor": "^1.10.0",
    "react-native-push-notification": "^8.1.1",
    "react-native-reanimated": "^3.6.3",
    "react-native-render-html": "^6.3.4",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-share": "^12.2.0",
    "react-native-vector-icons": "^10.0.3",
    "react-redux": "^9.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/react": "^18.2.6",
    "@types/react-native-push-notification": "^8.1.4",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
